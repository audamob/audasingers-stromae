<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/audamob_version_deux_bg_blur" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        

      

        <RelativeLayout
            android:id="@+id/Layout_Add_video"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/sweipy_simulation"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_audamob_version_deux_selector" >

            <ImageView
                android:id="@+id/icon_play_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/audamob_version_deux_play_all" />

            <TextView
                 android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/icon_play_all"
                android:text="Play the playlist"
                android:textColor="#CCCCCC"
                android:textSize="17dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/ListAppM"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/Layout_Add_video"
          
            android:divider="@color/blue"
            android:dividerHeight="0dp" />
    </RelativeLayout>

</RelativeLayout>