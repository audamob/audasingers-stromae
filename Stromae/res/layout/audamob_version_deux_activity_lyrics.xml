<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:id="@+id/MainContainer"
   android:background="@drawable/audamob_version_deux_bg_blur" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

      
        <RelativeLayout
            android:id="@+id/sweipy_simulation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/header"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                   android:background="@drawable/layout_audamob_version_deux_selector"
                    android:paddingBottom="10dp"
          >

            <TextView
                android:id="@+id/NameSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:text=""
                android:textColor="@color/flat_clouds"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sweipy_simulation" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                
                 >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                   android:background="@drawable/layout_audamob_version_deux_selector"
                    android:paddingBottom="10dp" 
                    android:layout_marginTop="1dp" >

                    <TextView
                        android:id="@+id/TextLyrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:textColor="@color/flat_clouds"
                        android:textSize="15dp" />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/audamob_version_deux_progres1" />
    </RelativeLayout>

</RelativeLayout>